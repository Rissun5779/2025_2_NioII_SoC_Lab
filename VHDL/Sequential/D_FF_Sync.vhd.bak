library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity D_FF is
  port (
    clk : in std_logic;
    rst : in std_logic;
    D   : in std_logic;
    Q   : out std_logic;
    Qn  : out std_logic
  );
end entity;

architecture rtl of D_FF is
begin
  D_FLIPFLOP : process (clk, D)
  begin
    if (rst = '0') then
        Q  <= '0';
        Qn <= not Q;
    elsif rising_edge(clk) then
        Q  <= D;
        Qn <= not Q;
    end if;
  end process;
end architecture;